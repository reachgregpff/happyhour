
<%  count = 0 
    @page = @page.to_i%>

<br><br><br>

<div class="container">
    <div class="row">
      <div class="col-md-4">
        <h6 style="font-weight: bold">Total cocktails to choose from: <%=@cocktails.count%></h6>
        <h5>Cocktails <%=(@page-1)*100+1%> to <%=(@page-1)*100+100%>...</h5>
      </div>
      <center>
        <div class="col-md-4">
        </div>
        <div class="col-md-4">
        <h6 style="font-weight: bold">This page is powered by</h6>
        <a href="https://www.yummly.com"><img style="width: 20%;"  src="/yummly.png"></a>
      </center>
    </div>
  </div>
</div>


<div class="container">
  <div class="row">
    <div data-total="<%=@cocktails.count%>" id="number-scroll" class="col-md-12">
      <center>
        <a href="/cocktails/1">
          <button data-end="01" id="last-button" class="btn btn-default btn-xs">Page 01</button>
        </a>
        <% if @page == 1%>
          <button data-start="1" id="prev-button"  class="btn btn-default btn-xs" disabled><<</button>
        <% else %>
          <a href="/cocktails/<%=@page-1%>">
            <button data-start="1" id="prev-button"  class="btn btn-default btn-xs"><<</button>
          </a>
        <% end %>
        <% if @page == (@cocktails.count/100)%>
          <button  data-end="100" id="next-button" class="btn btn-default btn-xs" disabled>>></button>
        <% else %>
          <a href="/cocktails/<%=@page+1%>">
            <button data-end="100" id="next-button" class="btn btn-default btn-xs">>></button>
          </a>
        <% end %>
        <a href="/cocktails/<%=@cocktails.count/100%>">
          <button data-end="<%=@cocktails.count/100%>" id="last-button" class="btn btn-default btn-xs">Page <%=@cocktails.count/100%></button> 
        </a>    
      </center>
    </div>
  </div>
</div>




<div class="container">
    <div class="row">

      <% for i in ((@page-1)*100)..((@page-1)*100+99)%>

          <a href="/cocktails/show/<%=@cocktails[i].cocktail_id%>">
            <div style="background-color: linen" id="cocktail-tile" class="col-md-2">
              <h5><%=@cocktails[i].name%></h5>

              <% if @cocktails[i].image_url != "Image Not Available" %>
                <img src=<%=@cocktails[i].image_url%> alt=""></img>
              <% else %>
                <img id="cocktail-tile-image" src="/Cocktailani.gif" alt="Cocktail"></img>
              <% end %>

        <p class="cocktail-text"><%=@cocktails[i].ingredients%></p>
      </div>
    </a>

      <% end %>

  </div>
</div>

<div class="container">
  <div class="row">
    <div data-total="<%=@cocktails.count%>" id="number-scroll" class="col-md-12">
      <center>
        <a href="/cocktails/1">
          <button data-end="01" id="last-button" class="btn btn-default btn-xs">Page 01</button>
        </a>
        <% if @page == 1%>
          <button data-start="1" id="prev-button"  class="btn btn-default btn-xs" disabled><<</button>
        <% else %>
          <a href="/cocktails/<%=@page-1%>">
            <button data-start="1" id="prev-button"  class="btn btn-default btn-xs"><<</button>
          </a>
        <% end %>
        <% if @page == (@cocktails.count/100)%>
          <button  data-end="100" id="next-button" class="btn btn-default btn-xs" disabled>>></button>
        <% else %>
          <a href="/cocktails/<%=@page+1%>">
            <button data-end="100" id="next-button" class="btn btn-default btn-xs">>></button>
          </a>
        <% end %>
        <a href="/cocktails/<%=@cocktails.count/100%>">
          <button data-end="<%=@cocktails.count/100%>" id="last-button" class="btn btn-default btn-xs">Page <%=@cocktails.count/100%></button> 
        </a>    
      </center>
    </div>
  </div>
</div>







